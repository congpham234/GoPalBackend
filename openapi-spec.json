{
  "openapi": "3.1.0",
  "info": {
      "title": "GoPal API Model",
      "version": "2024-05-01",
      "description": "Provides weather forecasts"
  },
  "paths": {
      "/v1/get-itinerary": {
          "post": {
              "description": "This API returns an AI generated trip planning from input",
              "operationId": "GetItinerary",
              "requestBody": {
                  "content": {
                      "application/json": {
                          "schema": {
                              "$ref": "#/components/schemas/GetItineraryRequestContent"
                          }
                      }
                  },
                  "required": true
              },
              "responses": {
                  "200": {
                      "description": "GetItinerary 200 response",
                      "content": {
                          "application/json": {
                              "schema": {
                                  "$ref": "#/components/schemas/GetItineraryResponseContent"
                              }
                          }
                      }
                  },
                  "404": {
                      "description": "NotFoundException 404 response",
                      "content": {
                          "application/json": {
                              "schema": {
                                  "$ref": "#/components/schemas/NotFoundExceptionResponseContent"
                              }
                          }
                      }
                  },
                  "501": {
                      "description": "TerminalException 501 response",
                      "content": {
                          "application/json": {
                              "schema": {
                                  "$ref": "#/components/schemas/TerminalExceptionResponseContent"
                              }
                          }
                      }
                  }
              }
          }
      }
  },
  "components": {
      "schemas": {
          "GetItineraryRequestContent": {
              "type": "object",
              "properties": {
                  "destination": {
                      "type": "string"
                  },
                  "startDate": {
                      "type": "string",
                      "format": "date-time"
                  },
                  "endDate": {
                      "type": "string",
                      "format": "date-time"
                  },
                  "numOfPeople": {
                      "type": "number"
                  }
              },
              "required": [
                  "destination",
                  "endDate",
                  "numOfPeople",
                  "startDate"
              ]
          },
          "GetItineraryResponseContent": {
              "type": "object",
              "properties": {
                  "country": {
                      "type": "string"
                  },
                  "destination": {
                      "type": "string"
                  },
                  "destinationImageUrl": {
                      "type": "string"
                  },
                  "placesToStay": {
                      "type": "array",
                      "items": {
                          "$ref": "#/components/schemas/PlaceToStay"
                      }
                  },
                  "planningDays": {
                      "type": "array",
                      "items": {
                          "$ref": "#/components/schemas/PlanningDay"
                      }
                  }
              }
          },
          "NotFoundExceptionResponseContent": {
              "type": "object",
              "description": "This exception is thrown when a requested resource does not exist.",
              "properties": {
                  "message": {
                      "type": "string"
                  }
              }
          },
          "PlaceToStay": {
              "type": "object",
              "properties": {
                  "name": {
                      "type": "string"
                  },
                  "reviewScore": {
                      "type": "number",
                      "maximum": 10,
                      "minimum": 1,
                      "format": "float"
                  },
                  "numOfReviews": {
                      "type": "number"
                  },
                  "suggestedPrice": {
                      "type": "number"
                  },
                  "currency": {
                      "type": "string"
                  }
              },
              "required": [
                  "name"
              ]
          },
          "PlanningDay": {
              "type": "object",
              "properties": {
                  "dayNumber": {
                      "type": "number"
                  },
                  "title": {
                      "type": "string"
                  },
                  "location": {
                      "type": "string"
                  },
                  "locationImageUrl": {
                      "type": "string"
                  },
                  "description": {
                      "type": "string"
                  }
              }
          },
          "TerminalExceptionResponseContent": {
              "type": "object",
              "description": "This exception is thrown when a dependency call has failed or an internal error occurs.",
              "properties": {
                  "message": {
                      "type": "string"
                  }
              }
          }
      }
  }
}
